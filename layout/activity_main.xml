<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Capa do App -->
        <ImageView
            android:id="@+id/imgCapa"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/images"
            android:layout_marginBottom="16dp"/>

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reserva de Materiais"
            android:textSize="24sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Campos de entrada -->
        <EditText
            android:id="@+id/editNomeAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Aluno"
            android:padding="14dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editCPF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF"
            android:inputType="number"
            android:padding="14dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editQuantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantidade"
            android:inputType="number"
            android:padding="14dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dia (DD/MM/AAAA)"
            android:padding="14dp"
            android:layout_marginBottom="16dp" />

        <!-- Spinner -->
        <Spinner
            android:id="@+id/spinnerMaterial"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:backgroundTint="#E0E0E0" />

        <!-- Botões -->

        <Button
            android:id="@+id/btnGravar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gravar"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnLimpar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpar"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />

        <!-- Lista de registros -->
        <ListView
            android:id="@+id/listRegistros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:background="#FFFFFF"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>



